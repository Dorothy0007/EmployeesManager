@using EmployeesManager.Model
@model Clinic

@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Ažuriranje klinike</h2>
            <hr />
        </div>
        <div>
        <div class="form-group">
                <label asp-for="NameShort" class="control-label"></label>
                <input asp-for="NameShort" class="form-control" />
                <span asp-validation-for="NameShort" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="NameLong" class="control-label"></label>
                <input asp-for="NameLong" class="form-control" />
                <span asp-validation-for="NameLong" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="HeadClinic" class="control-label"></label>
                <input asp-for="HeadClinic" class="form-control" />
                <span asp-validation-for="HeadClinic" class="text-danger"></span>
        </div>
        <div class="editor-field">
            <label asp-for="Location" class="control-label"></label>
                    <select name="Location" class = "form-control" asp-items="Html.GetEnumSelectList<Location>()">
                        <option value="">@Model.Location</option>
                    </select>
        </div>
            <br />
         <div class="row pt-4">
             <div class="col-6">
                 <button type="submit" class="btn btn-primary">Spremi promjene</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Clinic" asp-action="Index" class="btn btn-secondary">Natrag na popis klinika</a>
            </div>
         </div>
    </div>
    </div>
</form>