@using EmployeesManager.Model
@model Education

@{
    ViewData["Title"] = "DetailsEmployee";
}

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Detalji edukacije</h2>
            <hr />
        </div>
        <div>
         <div class="form-group">
                <label  class="control-label"></label>
                <select class="select2bs4 select2-hidden-accessible" name="Employees" multiple="" data-placeholder="Select a Employee" style="width: 100%;" data-select2-id="23" tabindex="-1" aria-hidden="true" disabled>
                   @foreach(var n in ViewBag.Employee)
                    {
                        @if(Model.Employees!=null)
                        {
                            foreach (var e in Model.Employees)
                            {
                                if(e.EmployeeId==n.EmployeeId)
                                {
                                    <option value="@n.EmployeeId" selected>@n.FirstName @n.LastName</option>
                                    break;
                                }
                            }
                            <option value="@n.EmployeeId">@n.FirstName @n.LastName</option>
                        
                        }
                        else
                        {
                            <option value="@n.EmployeeId">@n.FirstName @n.LastName</option>
                        }

                        
                    }
                   
                   
                  </select>
            </div>
            <br />
         <div class="row pt-4">
             <div class="col-6">
                </div>
             <div class="col-6 text-end">
                <a asp-controller="Education" asp-action="Index" class="btn btn-secondary">Natrag na popis edukacija</a>
            </div>
         </div>
    </div>
    </div>
</form>


@section scripts{
               <link rel="stylesheet" href="~/lib/select2/css/select2.min.css">
              <link rel="stylesheet" href="~/lib//select2-bootstrap4-theme/select2-bootstrap4.min.css">
              <script src="~/lib//select2/js/select2.full.min.js"></script>
                  <script>
                      //Initialize Select2 Elements
            $('.select2bs4').select2({
              theme: 'bootstrap4'
            })
                  </script>
}