@using EmployeesManager.Model
@model Education

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Unos nove edukacije</h2>
            <hr />
        </div>
        <div>
        <div class="form-group">
                <label asp-for="EducationName" class="control-label"></label>
                <input asp-for="EducationName" class="form-control" />
                <span asp-validation-for="EducationName" class="text-danger"></span>
        </div>
        <div class="editor-field">
            <label asp-for="EducationCategory" class="control-label"></label>
            <select name="EducationCategory"  class = "form-control editor-field" id="EducationCategory">
                    <option value="">[Unesite kategoriju edukacije]</option>
                    @foreach (var n in ViewBag.EducationCategory)
                    {
                        <option value="@n.CategoryName">@n.CategoryName</option>
                    }

             </select>
                 
        </div>
        <div class="editor-field">
            <label asp-for="EducationType" class="control-label"></label>
            <select name="EducationType"  class = "form-control editor-field" id="EducationType">
                    <option value="">[Unesite vrstu edukacije]</option>
                    @foreach (var n in ViewBag.EducationType)
                    {
                        <option value="@n.EducationTypeName">@n.EducationTypeName</option>
                    }

             </select>
                 
        </div>
        <div class="editor-field">
            <label asp-for="ParticipationType" class="control-label"></label>
             <select name="ParticipationType"  class = "form-control editor-field" id="ParticipationType">
                    <option value="">[Unesite vrstu sudjelovanja]</option>
                    @foreach (var n in ViewBag.ParticipationType)
                    {
                        <option value="@n.ParticipationTypeName">@n.ParticipationTypeName</option>
                    }

             </select>
                   
        </div>
        <div class="form-group">
                <label asp-for="BeginDate" class="control-label"></label>
                <input asp-for="BeginDate" class="form-control" />
                <span asp-validation-for="BeginDate" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="Remark" class="control-label"></label>
                <input asp-for="Remark" class="form-control" />
                <span asp-validation-for="Remark" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Mandatory" /> @Html.DisplayNameFor(model => model.Mandatory)
                </label>
        </div>

        <div class="form-group">
                <label  class="control-label"></label>
                <select class="select2bs4 select2-hidden-accessible" name="Employees" multiple="" data-placeholder="Odabir zaposlenika" style="width: 100%;" data-select2-id="23" tabindex="-1" aria-hidden="true">
                   @foreach(var n in ViewBag.Employee)
                    {
                         <option value="@n.EmployeeId">@n.FirstName @n.LastName</option>
                    }
                   
                   
                  </select>
               @* <select class="form-control" asp-items="ViewBag.EmployeeId" name="EmployeeIdList"  multiple></select>*@
            </div>

         <br />
         <div class="row pt-4">
             <div class="col-6">
                 <button type="submit" class="btn btn-primary">Kreiraj</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Education" asp-action="Index" class="btn btn-secondary">Natrag na popis edukacija</a>
            </div>
         </div>
    </div>
    </div>
</form>


               
@section scripts{
           <link rel="stylesheet" href="~/lib/select2/css/select2.min.css">
          <link rel="stylesheet" href="~/lib//select2-bootstrap4-theme/select2-bootstrap4.min.css">
          <script src="~/lib//select2/js/select2.full.min.js"></script>
              <script>
        $('.select2bs4').select2({
          theme: 'bootstrap4'
        })
              </script>
}