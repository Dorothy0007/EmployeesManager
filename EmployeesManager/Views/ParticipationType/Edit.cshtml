@using EmployeesManager.Model
@model ParticipationType

@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Ažuriranje vrste sudjelovanja</h2>
            <hr />
        <div class="form-group">
                <label asp-for="ParticipationTypeName" class="control-label"></label>
                <input asp-for="ParticipationTypeName" class="form-control" />
                <input type="hidden" asp-for="ParticipationTypeId" class="form-control" />
                <span asp-validation-for="ParticipationTypeName" class="text-danger"></span>
        </div>
        <br />
         <div class="row pt-4">
             <div class="col-6">
                 <button type="submit" class="btn btn-primary">Spremi promjene</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="ParticipationType" asp-action="Index" class="btn btn-secondary">Natrag na popis vrsti sudjelovanja</a>
            </div>
         </div>
    </div>
    </div>
</form>