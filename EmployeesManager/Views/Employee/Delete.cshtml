@using EmployeesManager.Model
@model Employee

@{
    ViewData["Title"] = "DeletePost";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="EmployeeId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Brisanje zaposlenika</h2>
            <hr />
        </div>
        <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" disabled class="form-control" />
        </div>
        <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" disabled class="form-control" />
        </div>
        <div class="form-group">
                <label asp-for="OIB" class="control-label"></label>
                <input asp-for="OIB" disabled class="form-control" />
        </div>
        <div class="form-group">
                <label asp-for="MBO" class="control-label"></label>
                <input asp-for="MBO" disabled class="form-control" />
        </div>
        <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" disabled asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
        </div>
        <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" disabled class="form-control" />
            </div>
            @*<div class="form-group">
                <label asp-for="AddressId" class="control-label"></label>
                <select asp-for="AddressId" disabled class ="form-control" asp-items="ViewBag.AddressId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContactId" disabled class="control-label"></label>
            </div>*@
            <br />
         <div class="row pt-4">
             <div class="col-6">
                 <button type="submit" class="btn btn-danger">Obriši zaposlenika</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Natrag na popis zaposlenika</a>
            </div>
         </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}