@using EmployeesManager.Model
@model Employee

@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Unos novog zaposlenika</h2>
            <hr />
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#home">Osnovni podaci</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#address">Adresa</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#contact">Kontakt</a>
            </li>
        </ul>
        <hr />
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane active show" id="home">
        <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="OIB" class="control-label"></label>
                <input asp-for="OIB" class="form-control" />
                <span asp-validation-for="OIB" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="MBO" class="control-label"></label>
                <input asp-for="MBO" class="form-control" />
                <span asp-validation-for="MBO" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
        </div>
        <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            </div>
            <div class="tab-pane fade" id="address">
                   <div class="form-group">
                <label asp-for="Address.Street" class="control-label"></label>
                <select asp-for="Address.Street" class ="form-control" asp-items="ViewBag.AddressId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Address.StreetNumber" class="control-label"></label>
                <select asp-for="Address.StreetNumber" class ="form-control" asp-items="ViewBag.AddressId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Address.PostalCode" class="control-label"></label>
                <select asp-for="Address.PostalCode" class ="form-control" asp-items="ViewBag.AddressId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label"></label>
                <select asp-for="Address.City" class ="form-control" asp-items="ViewBag.AddressId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Address.Country" class="control-label"></label>
                <select asp-for="Address.Country" class ="form-control" asp-items="ViewBag.AddressId"></select>
            </div>
            </div>
            <div class="tab-pane fade active show" id="contact">
                   <div class="form-group">
                <label asp-for="Contact.BusinessEmail" class="control-label"></label>
                <select asp-for="Contact.BusinessEmail" class ="form-control" asp-items="ViewBag.ContactId"></select>
            </div>
            </div>
            </div>
            <br />
         <div class="row pt-4">
             <div class="col-6">
                 <button type="submit" class="btn btn-primary">Kreiraj</button>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Natrag na popis zaposlenika</a>
            </div>
         </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}